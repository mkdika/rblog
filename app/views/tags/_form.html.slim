= form_for @tag do |f|
  .field
    = f.label "Name", class: "label"
    .control
      = f.text_field :name, class: "input #{ @tag.errors[:name].any? ? 'is-danger' : '' }"
      - if @tag.errors[:name]
        p.help.is-danger
          = @tag.errors[:name].join(', ')
  div
    = f.submit button_text, class: "button is-primary is-rounded"