doctype html
html
  head
    title 
      ' rBlog |
      = area :title, "..."
    meta name="viewport" content="width=device-width, initial-scale=1"
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  body
    - if flash[:notice]
      .notification.is-primary.is-full.has-text-centered
        button.delete
        = flash[:notice]
    - if alert
      .notification.is-warning.is-full.has-text-centered
        button.delete
        = alert
    = yield